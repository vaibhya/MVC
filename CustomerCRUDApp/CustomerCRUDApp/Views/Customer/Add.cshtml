@using CustomerCRUDApp.Models.ViewModel
@model AddVm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Customer</h2>

<div>
    @using (Html.BeginForm())
    {
        <form>
            <div class="form-group">
                <label for="inputUserName">Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="inputUserName">Location</label>
                @Html.TextBoxFor(m => m.Location, new { @class = "control" })
                @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="inputUserName">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <button type="submit">Add</button>
        </form>
        <p class="text-success">@ViewBag.Message</p>
    }

</div>

